# ============================================
# Application Configuration
# ============================================
APP_NAME: Derivative Hedging RL
ENVIRONMENT: development  # development, staging, production
DEBUG: true
HOST: 0.0.0.0
PORT: 8000

# ============================================
# Security
# ============================================
SECRET_KEY: change-this-secret-key-in-production-please-use-strong-random-key-at-least-32-chars
ALGORITHM: HS256
ACCESS_TOKEN_EXPIRE_MINUTES: 43200  # 30 days

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL: postgresql://hedge_rl:hedge_rl_password@localhost:5432/hedge_rl_db

# ============================================
# Redis Cache & Message Broker
# ============================================
REDIS_URL: redis://localhost:6379/0
CELERY_BROKER_URL: redis://localhost:6379/0
CELERY_RESULT_BACKEND: redis://localhost:6379/0

# ============================================
# CORS Origins (comma-separated)
# ============================================
# Add your frontend URLs here
# Example: CORS_ORIGINS: http://localhost:3000,http://localhost:8080
CORS_ORIGINS: http://localhost:3000,http://localhost:8000,http://localhost:8080

# ============================================
# Storage Paths
# ============================================
DATA_DIR: data
MODELS_DIR: models
LOGS_DIR: logs

# ============================================
# Monitoring & Logging
# ============================================
ENABLE_METRICS: true
LOG_LEVEL: INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# ML Training Defaults
# ============================================
DEFAULT_RANDOM_SEED: 42
MAX_TRAINING_TIME: 86400  # 24 hours in seconds

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE: 60

# ============================================
# External APIs (Optional)
# ============================================
# NASDAQ_API_KEY: your_nasdaq_api_key_here
# WANDB_API_KEY: your_wandb_api_key_here
# OPENAI_API_KEY: your_openai_api_key_here
